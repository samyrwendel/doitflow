# ===========================================
# DoitFlow - Configurações de Ambiente
# ===========================================

# Servidor Backend
PORT=3004
NODE_ENV=development

# API Keys - Provedores de IA (OBRIGATÓRIO)
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# URLs Internas
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3004

# Frontend (Vite)
# Deixe vazio para usar URLs relativas (funciona com nginx em produção)
VITE_API_BASE_URL=

# Feature Flags
ENABLE_SEMANTIC_SEARCH=true

# Evolution API (WhatsApp) - Opcional
# A configuração também pode ser feita pela interface web
EVOLUTION_API_URL=
EVOLUTION_API_KEY=

# Github Token - Opcional (para integrações)
GITHUB_TOKEN=
