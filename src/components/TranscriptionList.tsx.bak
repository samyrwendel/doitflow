import { FiDownload, FiTrash2, FiClock, FiFile, FiType, FiZap } from 'react-icons/fi'
import { SavedTranscription } from '../types'
import { formatTimestamp, formatFileSize, formatDuration } from '../lib/utils'

interface TranscriptionListProps {
  transcriptions: SavedTranscription[]
  onDownload: (transcription: SavedTranscription) => void
  onOptimizedChunks: (transcription: SavedTranscription) => void
  onDelete: (transcriptionId: string) => void
}

export function TranscriptionList({ 
  transcriptions, 
  onDownload, 
  onOptimizedChunks,
  onDelete 
}: TranscriptionListProps) {
  
  if (transcriptions.length === 0) {
    return (
      <div className="flex flex-col items-center justify-center h-full text-gray-500 dark:text-gray-400 py-8">
        <div className="w-12 h-12 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-3 opacity-50">
          <FiFile className="w-6 h-6" />
        </div>
        <p className="text-center max-w-xs text-xs px-4">
          Nenhuma transcrição salva ainda.
        </p>
      </div>
    )
  }

  return (
    <div className="space-y-2 px-1">
      {transcriptions.map((transcription) => (
        <div
          key={transcription.id}
          className="flex items-center justify-between p-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded hover:bg-gray-50 dark:hover:bg-gray-800/80 transition-colors"
        >
          {/* Info compacta em uma linha */}
          <div className="flex items-center gap-3 flex-1 min-w-0">
            <div className="flex-1 min-w-0">
              <span className="font-medium text-sm text-gray-900 dark:text-gray-100 truncate block">
                {transcription.title}
              </span>
            </div>
            
            <div className="flex items-center gap-3 text-xs text-gray-500 dark:text-gray-400 shrink-0">
              {/* Duration */}
              {transcription.duration && (
                <div className="flex items-center gap-1">
                  <FiClock className="w-3 h-3" />
                  <span>{formatDuration(transcription.duration)}</span>
                </div>
              )}
              
              {/* Audio Size */}
              {transcription.audioSize && (
                <div className="flex items-center gap-1">
                  <FiFile className="w-3 h-3" />
                  <span>{formatFileSize(transcription.audioSize)}</span>
                </div>
              )}
              
              {/* Character Count */}
              <div className="flex items-center gap-1">
                <FiType className="w-3 h-3" />
                <span>{(transcription.characterCount / 1000).toFixed(1)}k</span>
              </div>
              
              {/* Date */}
              <span className="text-xs">
                {formatTimestamp(transcription.createdAt).split(' ')[0]}
              </span>
            </div>
          </div>
          
          {/* Action Buttons */}
          <div className="flex gap-1 ml-3">
            <button
              onClick={() => onDownload(transcription)}
              className="p-1 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors"
              title="Baixar texto puro"
            >
              <FiDownload className="w-3 h-3" />
            </button>

            <button
              onClick={() => onOptimizedChunks(transcription)}
              className="p-1 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400 rounded hover:bg-yellow-200 dark:hover:bg-yellow-900/50 transition-colors"
              title="Gerar chunks IA otimizados"
            >
              <FiZap className="w-3 h-3" />
            </button>
            
            <button
              onClick={() => onDelete(transcription.id)}
              className="p-1 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
              title="Excluir"
            >
              <FiTrash2 className="w-3 h-3" />
            </button>
          </div>
        </div>
      ))}
      
      {/* Summary */}
      <div className="mt-3 pt-2 border-t border-gray-200 dark:border-gray-700 px-1">
        <div className="text-xs text-gray-500 dark:text-gray-400 text-center">
          {transcriptions.length} transcrições • {transcriptions.reduce((sum, t) => sum + t.characterCount, 0).toLocaleString()} chars total
        </div>
      </div>
    </div>
  )
}